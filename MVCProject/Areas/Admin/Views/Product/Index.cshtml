@model List<Product>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-9">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-3 text-end">
            <a asp-area="Admin" asp-controller="Product" asp-action="Upsert" class="btn btn-primary">
                Create New Product <i class="bi bi-plus-circle"></i>
            </a>
        </div>
    </div>
    <table id="tblData" class="table table-bordered table-hover table-striped">
        <thead>
        <tr>
            <th>Title</th>
            <th>ISBN</th>
            <th>Price</th>
            <th>Author</th>
            <th>Category</th>
            <th></th>
        </tr>
        </thead>
    </table>
</div>

@section Scripts
{
    <script src="~/js/product.js"></script>
}
